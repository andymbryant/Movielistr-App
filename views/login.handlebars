<div class="splash-page">

    <div class="splash-form">
        <div class="splash-info">
            <h1 class="app-title">Recomovie</h1>
            <h3 class="app-slogan">The best way to make movie lists</h3>
            <ol class="app-description">
                <li>Create movie lists with custom titles</li>
                <li>Add movies, using IMDB links</li>
                <li>See movie info, ratings, and more</li>
                <li>Update, delete, and save for later</li>
            </ol>
            <p class="register-link"><a class="link" href="/users/register">Register a new account</a></p>
        </div>

        <div class="line"></div>
        <div class="line2"></div>

        <div class="login-form">
            <div class="testuser">
                <p><strong>User:</strong> testuser &nbsp &nbsp<strong>Pass:</strong> password</p>
                </div>
            <p class="login-par">Already have an account? Login here.</p>
            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <form method="post" action="/users/login">
                <div class="form-group ">
                    <input type="text" class="form-control" name="username" placeholder="Username " id="UserName">
                    <i class="fa fa-user"></i>
                </div>

                <div class="form-group log-status">
                    <input type="password" class="form-control" name="password" placeholder="Password" id="Passwod">
                    <i class="fa fa-lock"></i>
                </div>

                <button type="submit" class="log-btn btn-default">Log in</button>
                <p class="register-link2"><a class="link" href="/users/register">Register a new account</a></p>
            </form>
         </div>
     </div>
</div>
